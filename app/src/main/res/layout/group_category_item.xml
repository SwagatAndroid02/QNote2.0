<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/note_category_itemparent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp">

    <TextView
        android:id="@+id/note_category_item_tv_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Category name"
        android:textSize="16sp"
        android:gravity="center"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/white" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:layout_marginBottom="10dp">
        <ImageView
            android:id="@+id/note_category_item_iv_avatar"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            tools:srcCompat="@tools:sample/avatars"
            android:visibility="gone"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/note_category_item_tv_datetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="June 20, 2021"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/note_category_item_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Topic name"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/note_category_item_tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="u can rename it as anything by doing this after the first.."
                android:textSize="14sp"
                android:lines="1"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/note_category_item_iv_fav"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_star_unselected" />
    </LinearLayout>
</LinearLayout>